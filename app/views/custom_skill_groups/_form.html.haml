
= simple_nested_form_for @skill_group, html: { class: 'skill-group' } do |f|
  .row
    .skill-group
      = f.input :name

  = f.fields_for :skills do |s|
    .row
      .skill
        = s.input :id, as: :hidden
        = s.input :name, label: false, placeholder: t("controllers.skill_groups.form.skill_name")
      .remove-skill-link
        = s.link_to_remove t(".remove_skill"), class: 'btn btn-danger'

  .fields-for-action
    .add-association
      = f.link_to_add t(".add_skill"), :skills, class: 'btn btn-default'

  %br
  .actions
    .submit-action
      = f.button :submit

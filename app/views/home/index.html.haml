
= content_for :heading do
  .home__heading
    %h1.home__title= t(".title")

.home__content
  .row
    .col-sm-12
      %h2.home__subtitle= t(".create_character")

  .row
    .col-sm-12
      = link_to t(".create_fate_core_btn"), new_character_path, class: "home__create-character-btn"

  .row
    .col-sm-12
      %h3.home__community-characters__title= t(".community_characters")
      %ul.list-unstyled.characters-list
        - @characters.each do |c|
          %li.character
            .character__line-icon FC
            .character__stats
              %span.character__name= c.name
              %br
              %span.character__concept= c.name
            .character__tags 
              Changeling, nWod, WinterCourt
            .character__sheet
              .row.character__sheet-content
                .col-sm-4
                  %span.character__sheet-title= t("activerecord.models.aspect", count: 2)
                  %ul.list-unstyled.character__aspects
                    %li.character__aspect Super herói sem dinheiro para o almoço aspecto com um nome realmente muito grande
                    %li.character__aspect Super herói sem dinheiro para o almoço aspecto com um nome realmente muito grande
                .col-sm-4
                  %span.character__sheet-title= t("activerecord.models.skill", count: 2)
                  %ul.list-unstyled.character__skills
                    - [5,4,3,2,1].each do |rating|
                      %li
                        .row
                          .col-xs-1
                            %span= "+#{rating}"
                          .col-xm-10
                            %ul.list-inline
                              - (6 - rating).times do |
                                %li.character__skill Briga
                .col-sm-4
                  %span.character__sheet-title= t("activerecord.models.stunt", count: 2)
                  %ul.list-unstyled.character__stunts
                    - 3.times do
                      %li.character__stunt
                        %span.character__stunt-name Spider Web
                        %p.character__stunt-name +2 ao Criar Vantagem em Inimigos em Fuga tchubas la rubas texto grande pra cacete de asa de fogo

<div class="authform">
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :role => 'form'}) do |f| %>
    <h3>Log in</h3>
    <%= devise_error_messages! %>
    <div class="form-group">
      <%- if devise_mapping.registerable? %>
        <%= link_to t('devise.sessions.sign_up'), new_registration_path(resource_name), class: 'right'  %>
      <% end -%>
      <%= f.label :email %>
      <%= f.email_field :email, :autofocus => true, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%- if devise_mapping.recoverable? %>
        <%= link_to t('devise.sessions.forgot_your_password'), new_password_path(resource_name), class: 'right' %>
      <% end -%>
      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>
    </div>
      <%= f.submit "#{t('devise.sessions.sign_in')}", :class => 'button right' %>
      <%= link_to user_omniauth_authorize_path(:facebook), class: "btn btn-facebook" do %>
        <i class="fa fa-facebook"><%= " | #{t('devise.sessions.login_with_facebook')}" %></i>
      <% end %>
      <% if devise_mapping.rememberable? -%>
        <div class="checkbox">
          <%= f.check_box :remember_me %> <%= f.label :remember_me, t('devise.sessions.remember_me') %>
        </div>
      <% end -%>
  <% end %>
</div>

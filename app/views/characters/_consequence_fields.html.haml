= s.input :id, as: :hidden
= s.input :level, as: :hidden
= s.input :name, as: :hidden
= s.input :skill_id, as: :hidden
= s.input :skill_level_to_unlock, as: :hidden
= s.input :description, label: false do
  = s.label s.object.level.to_s, :description, class: 'col-sm-2'
  .col-sm-10
    = s.input_field :description, placeholder: t("activerecord.attributes.consequence.#{s.object.name.parameterize.underscore}")

